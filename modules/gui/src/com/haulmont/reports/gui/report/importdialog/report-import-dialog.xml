<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="com.haulmont.reports.gui.report.importdialog.ReportImportDialog"
        messagesPack="com.haulmont.reports.gui.report.importdialog"
        caption="msg://reportImportDialog.caption"
        focusComponent="fileUpload">
    <dialogMode width="400px"/>
    <layout spacing="true" stylename="c-report-upload">
        <hbox id="dropZone" width="100%" height="100px" stylename="c-static-drop-zone">
            <label stylename="c-upload-dropzone-description" value="msg://uploadDescription" align="MIDDLE_CENTER"/>
        </hbox>
        <hbox spacing="true">
            <upload id="fileUpload" dropZone="dropZone"/>
            <label id="fileName" align="MIDDLE_LEFT"/>
        </hbox>
        <hbox spacing="true">
            <label value="msg://importRoles"/>
            <checkBox id="importRoles"/>
        </hbox>
        <frame id="windowActions" screen="editWindowActions"/>
    </layout>
</window>